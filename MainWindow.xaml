<Window x:Class="ReviewTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReviewTool"
        mc:Ignorable="d"
        Title="ReviewTool v1.8b" Height="720" Width="1200" MinHeight="640" MinWidth="980"
        Background="LightGray"
        Icon="/Assets/appIcon.ico"
        Focusable="True"
        KeyboardNavigation.DirectionalNavigation="None">
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{x:Static local:MainWindow.NextImageCommand}" />
        <KeyBinding Key="Left" Command="{x:Static local:MainWindow.PreviousImageCommand}" />
        <KeyBinding Key="B" Command="{x:Static local:MainWindow.BadOriginalCommand}" />
        <KeyBinding Key="R" Command="{x:Static local:MainWindow.RescanCommand}" />
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.NextImageCommand}" Executed="NextImageCommand_Executed" />
        <CommandBinding Command="{x:Static local:MainWindow.PreviousImageCommand}" Executed="PreviousImageCommand_Executed" />
        <CommandBinding Command="{x:Static local:MainWindow.BadOriginalCommand}" Executed="BadOriginalCommand_Executed" />
        <CommandBinding Command="{x:Static local:MainWindow.RescanCommand}" Executed="RescanCommand_Executed" />
    </Window.CommandBindings>
    <Window.Resources>
        <SolidColorBrush x:Key="PipelineCardBackgroundBrush" Color="#2F3136"/>
        <SolidColorBrush x:Key="PipelineCardBorderBrush" Color="#464A52"/>
        <SolidColorBrush x:Key="PipelineTextBrush" Color="#E5E7EA"/>
        <SolidColorBrush x:Key="PipelineTextboxBackgroundBrush" Color="#1E2024"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAB0B7"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#1E66E0"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PipelineTextBrush}" />
        </Style>

        <Style x:Key="ElevatedRoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#2F3136"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border CornerRadius="6" Background="Transparent" Margin="0,2,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="bd"
                                    CornerRadius="4"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionCompactButton" TargetType="Button" BasedOn="{StaticResource ElevatedRoundedButton}">
            <Setter Property="Padding" Value="4,4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>

        <Style x:Key="PerformMappingButtonStyle" TargetType="Button" BasedOn="{StaticResource ElevatedRoundedButton}">
            <Setter Property="IsEnabled" Value="True"/>
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FinalReviewButtonStyle" TargetType="Button" BasedOn="{StaticResource ElevatedRoundedButton}">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelReviewButtonStyle" TargetType="Button" BasedOn="{StaticResource ElevatedRoundedButton}">
            <Setter Property="Background" Value="#8A4A46"/>
            <Setter Property="Opacity" Value="0.82"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ResetReviewButtonStyle" TargetType="Button" BasedOn="{StaticResource ElevatedRoundedButton}">
            <Setter Property="Background" Value="#3A5A86"/>
            <Setter Property="Opacity" Value="0.82"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StartInitialReviewButtonStyle" TargetType="Button" BasedOn="{StaticResource ElevatedRoundedButton}">
            <Setter Property="Opacity" Value="0.82"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                    <Setter Property="Background" Value="#3E6E3A"/>
                    <Setter Property="Opacity" Value="0.82"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuggestedNumberTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#3A3A3A" />
            <Setter Property="Background" Value="#BFFFFFFF" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsInitialReview}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Border DockPanel.Dock="Top" Background="{StaticResource PipelineCardBackgroundBrush}" Padding="10"
                BorderBrush="{StaticResource PipelineCardBorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource StartInitialReviewButtonStyle}" Content="{Binding InitialReviewButtonText}" Margin="6,0,0,0"
                            Focusable="False"
                            Click="StartInitialReview_Click" />
                    <Button Style="{StaticResource ResetReviewButtonStyle}" Content="Reset" Margin="6,0,0,0"
                            Focusable="False"
                            Click="ResetReviewButton_Click" />
                    <Button Style="{StaticResource CancelReviewButtonStyle}" Content="Cancel review" Margin="6,0,0,0"
                            Focusable="False"
                            Click="CancelReview_Click" />
                    <Button Style="{StaticResource PerformMappingButtonStyle}" Content="{Binding PerformMappingButtonText}" Margin="6,0,0,0"
                            Focusable="False"
                            Click="PerformMapping_Click" />
                    <Button Style="{StaticResource FinalReviewButtonStyle}" Content="{Binding FinalReviewButtonText}" Margin="6,0,0,0"
                            Focusable="False" IsEnabled="False"
                            Click="StartFinalReview_Click" />
                    
                </StackPanel>
                <TextBlock Grid.Column="1"
                           Text="{Binding TargetFolderDisplayPath}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="12,0,0,0"
                           Foreground="{StaticResource SecondaryTextBrush}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FileListColumn">
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="220" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInitialReview}" Value="False">
                                    <Setter Property="Width" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition Width="*" />
                <ColumnDefinition x:Name="ReviewPreviewColumn">
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="*" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                                    <Setter Property="Width" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition x:Name="ActionsColumn">
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="Auto" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsExpanded, ElementName=ActionsExpander}" Value="False">
                                    <Setter Property="Width" Value="Auto" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Margin="6,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="{Binding OriginalImageLabel}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#3A3A3A" />
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInitialReview}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <CheckBox x:Name="AutoFillCheckBox"
                              Content="Auto fill"
                              IsChecked="{Binding IsAutoFillEnabled, Mode=TwoWay}"
                              VerticalAlignment="Center"
                              Foreground="#3A3A3A"
                              Margin="0,0,8,0"
                              Checked="AutoFillCheckBox_Checked" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                <Canvas x:Name="SuggestedHeaderCanvas">
                    <TextBlock x:Name="SuggestedHeaderLeft"
                               Style="{StaticResource SuggestedNumberTextStyle}"
                               Text="{Binding SelectedOriginalFile.NewFileName}" />
                    <TextBlock x:Name="SuggestedHeaderRight"
                               Style="{StaticResource SuggestedNumberTextStyle}"
                               Text="{Binding SelectedOriginalFile.NewFileName}" />
                </Canvas>
            </Grid>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ReviewingImageLabel}" FontSize="14" FontWeight="SemiBold" Margin="6,0,0,8">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource PipelineTextboxBackgroundBrush}"
                    BorderBrush="{StaticResource PipelineCardBorderBrush}" BorderThickness="1" CornerRadius="6">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsInitialReview}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <ListBox x:Name="OriginalFilesList"
                         ItemsSource="{Binding OriginalFiles}"
                         SelectedItem="{Binding SelectedOriginalFile, Mode=TwoWay}"
                         SelectionChanged="OriginalFiles_SelectionChanged"
                         Background="{StaticResource PipelineTextboxBackgroundBrush}"
                         Foreground="LightGray"
                         Opacity="0.9"
                         BorderThickness="0"
                         Padding="6"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="36" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding StatusCode}" VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="{Binding StatusBrush}"
                                           FontWeight="Bold"
                                           Margin="0,0,6,0">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.5" />
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding FileName}" VerticalAlignment="Center"
                                           Foreground="LightGray"
                                           Margin="0,0,12,0" />
                                 <TextBox Grid.Column="2" Text="{Binding NewFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Stretch"
                                          TextChanged="FileNameTextBox_TextChanged"
                                          PreviewKeyDown="FileNameTextBox_PreviewKeyDown"
                                          GotFocus="FileNameTextBox_GotFocus"
                                          Foreground="LightGray"
                                          Background="#2F3136"
                                          BorderBrush="{StaticResource PipelineCardBorderBrush}"
                                         BorderThickness="1"
                                         Padding="4,2" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource PipelineTextboxBackgroundBrush}"
                    BorderBrush="{StaticResource PipelineCardBorderBrush}" BorderThickness="1" CornerRadius="6">
                <Viewbox x:Name="OriginalViewbox" Stretch="Uniform"
                         SizeChanged="OriginalViewbox_SizeChanged"
                         PreviewMouseLeftButtonDown="OriginalViewbox_PreviewMouseLeftButtonDown"
                         PreviewMouseLeftButtonUp="OriginalViewbox_PreviewMouseLeftButtonUp"
                         PreviewMouseMove="OriginalViewbox_PreviewMouseMove"
                         PreviewMouseWheel="OriginalViewbox_PreviewMouseWheel"
                         LostMouseCapture="OriginalViewbox_LostMouseCapture">
                    <Image x:Name="OriginalImage" Source="{Binding OriginalImagePreview}" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" />
                </Viewbox>
            </Border>

            <Border Grid.Row="1" Grid.Column="2" Background="{StaticResource PipelineTextboxBackgroundBrush}"
                    BorderBrush="{StaticResource PipelineCardBorderBrush}" BorderThickness="1" CornerRadius="6">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsInitialReview}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Viewbox Stretch="Uniform">
                    <Image Source="{Binding ReviewingImagePreview}" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" />
                </Viewbox>
            </Border>

            <Border Grid.Row="1" Grid.Column="3" Background="{StaticResource PipelineTextboxBackgroundBrush}"
                    BorderBrush="{StaticResource PipelineCardBorderBrush}" BorderThickness="1" CornerRadius="6" Padding="8">
                <Expander x:Name="ActionsExpander" IsExpanded="True" ExpandDirection="Left"
                          Foreground="{StaticResource PipelineTextBrush}">
                    <Expander.Header>
                        <TextBlock Text="Actions">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90" />
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Expander.Header>
                    <Grid Grid.IsSharedSizeScope="True" Margin="0,6,0,0" HorizontalAlignment="Left"
                          VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="ActionButtons" Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource ActionCompactButton}" Content="Bad original"
                                Click="BadOriginal_Click" />
                        <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource ActionCompactButton}" Content="Rescan"
                                Click="Rescan_Click" />
                        <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource ActionCompactButton}" Content="OK"
                                Margin="0,0,8,0" Click="OkReview_Click" />
                    </Grid>
                </Expander>
            </Border>
        </Grid>
    </DockPanel>
</Window>
